.container.mb-5
  form#editEvent(name='editEvent' method='post' action='/editEventEntry?eventId=' + record.id)
    .form-group
      label(for='nameInput') Event
      input#nameInput.form-control(type='text' name='event' value=(record.name || '') pattern='[a-zA-Z0-9\s]+' title='Event must be alphanumeric' required='')
      small#eventHelp.form-text.text-muted
        | Event name must be alphanumeric
    .form-group
      label(for='dayInput') Day of Week
      select#dayInput.form-control(name='day')
        //- for day in ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday']
        option(selected=(record.day === "Sunday" || record.day === "sunday"))
          | Sunday
        option(selected=(record.day === "Monday" || record.day === "monday"))
          | Monday
        option(selected=(record.day === "Tuesday" || record.day === "tuesday"))
          | Tuesday
        option(selected=(record.day === "Wednesday" || record.day === "wednesday"))
          | Wednesday
        option(selected=(record.day === "Thursday" || record.day === "thursday"))
          | Thursday
        option(selected=(record.day === "Friday" || record.day === "friday"))
          | Friday
        option(selected=(record.day === "Saturday" || record.day === "saturday"))
          | Saturday
        //- option
