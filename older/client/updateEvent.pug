        //- option
        //-   | Saturday
    .form-group
      label(for='startTimeInput') Start
      input#startTimeInput.form-control(type='time' name='start' value=(record.start || "") required='')
    .form-group
      label(for='endTimeInput') End
      input#endTimeInput.form-control(type='time' name='end' value=(record.end || "") required='')
    .form-group
      label(for='phoneInput') Phone
      input#phoneInput.form-control(type='text' name='phone' value=(record.phone || "") required='')
    .form-group
      label(for='locationInput') Location
      input#locationInput.form-control(type='text' name='location' value=(record.location || "") required='')
    .form-group
      label(for='extraInput') Extra Info
      input#extraInput.form-control(type='text' name='info' value=(record.info || "") required='')
    .form-group
      label(for='urlInput') Enter URL for the Extra Info
      input#urlInput.form-control(type='url' name='url' value=(record.eurl || "") required='')
    button.btn.btn-block.btn-primary(type='submit') Submit
